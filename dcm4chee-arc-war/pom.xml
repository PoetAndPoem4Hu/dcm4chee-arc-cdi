<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.dcm4che.dcm4chee-arc</groupId>
    <artifactId>dcm4chee-arc-parent</artifactId>
    <version>4.4.0-SNAPSHOT</version>
  </parent>
  <artifactId>dcm4chee-arc-war</artifactId>
  <packaging>pom</packaging>
  <properties>
    <wildfly-skip>true</wildfly-skip>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.wildfly.plugins</groupId>
        <artifactId>wildfly-maven-plugin</artifactId>
        <version>1.0.1.Final</version>
        <configuration>
          <hostname>${wildfly-hostname}</hostname>
          <port>${wildfly-port}</port>
          <filename>${project.build.finalName}.${project.packaging}</filename>
          <skip>${wildfly-skip}</skip>
        </configuration>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>deploy-only</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>dcm4chee-arc-war-base</module>
  </modules>
  <profiles>
    <profile>
      <id>db-mysql</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>dcm4chee-arc-war-mysql</module>
      </modules>
    </profile>
    <profile>
      <id>db-oracle</id>
      <modules>
        <module>dcm4chee-arc-war-oracle</module>
      </modules>
    </profile>
    <profile>
      <id>db-all</id>
      <modules>
        <module>dcm4chee-arc-war-db2</module>
        <module>dcm4chee-arc-war-firebird</module>
        <module>dcm4chee-arc-war-h2</module>
        <module>dcm4chee-arc-war-mysql</module>
        <module>dcm4chee-arc-war-oracle</module>
        <module>dcm4chee-arc-war-psql</module>
        <module>dcm4chee-arc-war-sqlserver</module>
      </modules>
    </profile>
  </profiles>
</project>

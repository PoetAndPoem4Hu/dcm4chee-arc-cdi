<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="dcm4chee-arc">
    <jta-data-source>${ds}</jta-data-source>
    <jar-file>${basedir}/../../dcm4chee-arc-entity/target/dcm4chee-arc-entity-${project.version}.jar</jar-file>
    <jar-file>${basedir}/../../dcm4chee-arc-entity-ext/target/dcm4chee-arc-entity-ext${project.version}.jar</jar-file>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.DB2Dialect" />
    </properties>
  </persistence-unit>
</persistence>

<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="dcm4chee-arc">
    <jta-data-source>${ds}</jta-data-source>
    <jar-file>dcm4chee-arc-entity-ext-${project.version}-${db}.jar</jar-file>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
      <property name="hibernate.hbm2ddl.auto" value="${hbm2ddl.auto}" />
      <property name="hibernate.show_sql" value="${show_sql}" />
      <property name="hibernate.jdbc.use_get_generated_keys" value="true" />
      <property name="hibernate.jdbc.fetch_size" value="50"/>
      <property name="hibernate.cache.use_second_level_cache" value="true" />
      <property name="hibernate.cache.use_query_cache" value="true" />
    </properties>
  </persistence-unit>
</persistence>
